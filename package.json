{
  "name": "d3-app",
  "version": "1.0.0",
  "description": "Starter Kit for a d3 application",
  "author": "Maurizio Cescon <maurizio.cescon@gmail.com>",
  "homepage": "https://github.com/mauriziocescon",
  "private": false,
  "engines": {
    "node": "=8.11.3",
    "npm": "=5.6.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "cross-env NODE_ENV=production npm run json-server",
    "json-server": "node ./mock-server/server.js",
    "json-server-watch": "nodemon --ext js --watch ./mock-server ./mock-server/server.js",
    "serve": "webpack-dev-server --d --progress --profile --colors --env.name=dev | npm run json-server-watch",
    "build": "webpack --progress --profile --json --colors --env.name=prod",
    "test": "jest src",
    "bundle-analyzer": "webpack-bundle-analyzer ./dist/stats.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriziocescon/react-app"
  },
  "keywords": [
    "bootstrap",
    "cescon",
    "css-modules",
    "d3",
    "es2017",
    "jest",
    "json-server",
    "maurizio",
    "mock-server",
    "sass",
    "travis",
    "typescript",
    "vendor",
    "webpack"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/brentertz/scapegoat/blob/master/LICENSE-MIT"
    }
  ],
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "bootstrap": "4.1.1",
    "d3": "5.5.0",
    "font-awesome": "4.7.0",
    "jquery": "3.3.1",
    "popper.js": "1.14.3",
    "roboto-fontface": "0.9.0"
  },
  "devDependencies": {
    "@types/bootstrap": "4.1.1",
    "@types/d3": "5.0.0",
    "@types/faker": "4.1.2",
    "@types/jest": "23.1.3",
    "@types/jquery": "3.3.4",
    "@types/node": "10.5.1",
    "@types/popper.js": "1.11.0",
    "awesome-typescript-loader": "5.2.0",
    "babel-core": "6.26.3",
    "babel-jest": "23.2.0",
    "babel-preset-env": "1.7.0",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "4.5.2",
    "cross-env": "5.2.0",
    "css-loader": "0.28.11",
    "expose-loader": "0.7.5",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "faker": "4.1.0",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.2.0",
    "json-server": "0.14.0",
    "node-sass": "4.9.0",
    "nodemon": "1.17.5",
    "resolve-url-loader": "2.3.0",
    "sass-loader": "7.0.3",
    "sass-resources-loader": "1.3.3",
    "source-map-loader": "0.2.3",
    "style-loader": "0.21.0",
    "stylelint": "9.3.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-webpack-plugin": "0.10.5",
    "sw-precache-webpack-plugin": "0.11.5",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "tslint-loader": "3.6.0",
    "typescript": "2.9.2",
    "typings-for-css-modules-loader": "1.7.0",
    "webpack": "4.13.0",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.4",
    "webpack-manifest-plugin": "2.0.3",
    "webpack-merge": "4.1.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^.+\\.(less|scss)$": "babel-jest"
    }
  }
}
