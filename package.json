{
  "name": "d3-app",
  "version": "1.0.0",
  "description": "Starter Kit for a d3 application",
  "author": "Maurizio Cescon <maurizio.cescon@gmail.com>",
  "homepage": "https://github.com/mauriziocescon",
  "private": false,
  "engines": {
    "node": ">=10.16.3",
    "npm": ">=6.9.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "cross-env NODE_ENV=production npm run json-server",
    "json-server": "node ./mock-server/server.js",
    "json-server-watch": "nodemon --ext js --watch ./mock-server ./mock-server/server.js",
    "serve": "webpack-dev-server --d --progress --profile --color --env name=dev | npm run json-server-watch",
    "build": "webpack --progress --profile --color --env name=prod",
    "test": "jest src",
    "bundle-analyzer": "webpack-bundle-analyzer ./dist/stats.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriziocescon/d3-app"
  },
  "keywords": [
    "bootstrap",
    "cescon",
    "css-modules",
    "d3",
    "es2017",
    "jest",
    "json-server",
    "maurizio",
    "mock-server",
    "sass",
    "travis",
    "typescript",
    "vendor",
    "webpack"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/brentertz/scapegoat/blob/master/LICENSE-MIT"
    }
  ],
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "bootstrap": "4.5.3",
    "d3": "6.2.0",
    "font-awesome": "4.7.0",
    "jquery": "3.5.1",
    "popper.js": "1.16.1",
    "roboto-fontface": "0.10.0"
  },
  "devDependencies": {
    "@types/bootstrap": "5.0.0",
    "@types/d3": "5.16.3",
    "@types/faker": "5.1.2",
    "@types/jest": "26.0.15",
    "@types/jquery": "3.5.3",
    "@types/node": "14.14.0",
    "@types/webpack": "4.41.23",
    "awesome-typescript-loader": "5.2.1",
    "babel-core": "6.26.3",
    "babel-jest": "26.6.0",
    "babel-preset-env": "1.7.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.2.1",
    "cross-env": "7.0.2",
    "css-loader": "5.0.0",
    "expose-loader": "1.0.1",
    "faker": "5.1.0",
    "file-loader": "6.1.1",
    "html-loader": "1.3.2",
    "html-webpack-plugin": "4.5.0",
    "jest": "26.6.0",
    "json-server": "0.16.2",
    "mini-css-extract-plugin": "1.1.1",
    "node-sass": "4.14.1",
    "nodemon": "2.0.6",
    "resolve-url-loader": "3.1.2",
    "sass-loader": "10.0.3",
    "sass-resources-loader": "2.1.1",
    "source-map-loader": "1.1.1",
    "style-loader": "2.0.0",
    "stylelint": "13.7.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-webpack-plugin": "2.1.1",
    "ts-jest": "26.4.1",
    "tslint": "6.1.3",
    "tslint-loader": "3.5.4",
    "typescript": "4.0.3",
    "webpack": "5.1.3",
    "webpack-bundle-analyzer": "3.9.0",
    "webpack-cli": "4.1.0",
