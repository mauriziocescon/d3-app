{
  "name": "d3-app",
  "version": "1.0.0",
  "description": "Starter Kit for a d3 application",
  "author": "Maurizio Cescon <maurizio.cescon@gmail.com>",
  "homepage": "https://github.com/mauriziocescon",
  "private": false,
  "engines": {
    "node": "=8.9.1",
    "npm": "=5.5.1"
  },
  "scripts": {
    "postinstall": "node ./mock-server/db-creator.js | npm run build",
    "start": "npm run json-server",
    "json-server": "node ./mock-server/server.js",
    "json-server-watch": "nodemon ./mock-server/server.js",
    "serve": "webpack-dev-server --d --progress --profile --colors --env.name=dev | npm run json-server",
    "build": "webpack --progress --profile --colors --env.name=prod",
    "test": "jest src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriziocescon/react-app"
  },
  "keywords": [
    "bootstrap",
    "cescon",
    "css-modules",
    "d3",
    "es2017",
    "jest",
    "json-server",
    "maurizio",
    "mock-server",
    "sass",
    "travis",
    "typescript",
    "vendor",
    "webpack"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/brentertz/scapegoat/blob/master/LICENSE-MIT"
    }
  ],
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "bootstrap": "next",
    "d3": "4.12.0",
    "font-awesome": "4.7.0",
    "jquery": "3.2.1",
    "popper.js": "1.12.9",
    "roboto-fontface": "0.8.0"
  },
  "devDependencies": {
    "@types/bootstrap": "3.3.36",
    "@types/d3": "4.12.0",
    "@types/faker": "4.1.2",
    "@types/jest": "21.1.8",
    "@types/jquery": "3.2.16",
    "@types/node": "8.0.53",
    "@types/popper.js": "1.11.0",
    "awesome-typescript-loader": "3.4.0",
    "babel-core": "6.26.0",
    "babel-jest": "21.2.0",
    "babel-preset-env": "1.6.1",
    "clean-webpack-plugin": "0.1.17",
    "copy-webpack-plugin": "4.2.3",
    "css-loader": "0.28.7",
    "expose-loader": "0.7.4",
    "extract-text-webpack-plugin": "3.0.2",
    "faker": "4.1.0",
    "file-loader": "1.1.5",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "2.30.1",
    "jest": "21.2.1",
    "json-server": "0.12.1",
    "node-sass": "4.7.2",
    "nodemon": "1.12.1",
    "resolve-url-loader": "2.2.0",
    "sass-loader": "6.0.6",
    "sass-resources-loader": "1.3.1",
    "source-map-loader": "0.2.3",
    "style-loader": "0.19.0",
    "stylelint": "8.3.1",
    "stylelint-config-standard": "18.0.0",
    "stylelint-webpack-plugin": "0.9.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "21.2.3",
    "tslint": "5.8.0",
    "tslint-loader": "3.5.3",
    "typescript": "2.6.2",
    "typings-for-css-modules-loader": "1.7.0",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.5",
    "webpack-manifest-plugin": "1.3.2",
    "webpack-merge": "4.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(less|scss)$": "babel-jest"
    }
  }
}
